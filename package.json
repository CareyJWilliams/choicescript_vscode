{
	"name": "choicescript-vscode",
	"displayName": "ChoiceScript Language Server",
	"description": "ChoiceScript language support",
	"version": "1.0.0",
	"author": "Stephen Granade",
	"license": "MIT",
	"contributors": [
		{
			"name": "KLNeidecker"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sgranade/choicescript_vscode"
	},
	"publisher": "IFExtensions",
	"categories": [
		"Programming Languages",
		"Linters",
		"Snippets"
	],
	"keywords": [
		"ChoiceScript"
	],
	"engines": {
		"vscode": "^1.41.0"
	},
	"icon": "images/ChoiceOfGames.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:choicescript"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "choicescript",
				"aliases": [
					"ChoiceScript",
					"choicescript",
					"cs"
				],
				"extensions": [
					".txt"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "choicescript",
				"scopeName": "source.cs",
				"path": "./syntaxes/cs.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "choicescript",
				"path": "./snippets.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"choicescriptVsCode.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@fluffy-spoon/substitute": "^1.107.0",
		"@types/chai": "^4.2.7",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/urijs": "^1.19.4",
		"chai": "^4.2.0",
		"merge-options": "^2.0.0",
		"mocha": "^6.2.2",
		"rimraf": "^3.0.0",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.4",
		"tslint": "^5.16.0",
		"typescript": "^3.7.4",
		"vscode-languageserver": "^5.2.1",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10"
	},
	"dependencies": {},
	"__metadata": {
		"id": "7ea4fade-d4bd-40b0-a1b6-ff4e57a15079",
		"publisherDisplayName": "IFExtensions",
		"publisherId": "f3bb5996-197b-4db3-8bc9-36a9d01defcc"
	}
}
