{
	"name": "choicescript-vscode",
	"displayName": "ChoiceScript Language",
	"description": "ChoiceScript language support for VS Code",
	"version": "1.4.2",
	"author": {
		"name": "Stephen Granade",
		"email": "stephen@granades.com",
		"url": "https://github.com/sgranade"
	},
	"license": "SEE LICENSE IN License.txt",
	"contributors": [
		{
			"name": "KLNeidecker"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sgranade/choicescript_vscode"
	},
	"publisher": "StephenGranade",
	"categories": [
		"Programming Languages",
		"Linters",
		"Snippets"
	],
	"keywords": [
		"ChoiceScript",
		"cyoa",
		"interactive fiction"
	],
	"engines": {
		"vscode": "^1.41.0"
	},
	"icon": "images/ChoiceOfGames.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:choicescript",
		"onCommand:choicescript.italicize",
		"onCommand:choicescript.bold"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "choicescript",
				"aliases": [
					"ChoiceScript",
					"choicescript",
					"cs"
				],
				"extensions": [
					".txt"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"commands": [
			{
				"command": "choicescript.italicize",
				"title": "Italicize"
			},
			{
				"command": "choicescript.bold",
				"title": "Bold"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "choicescript.italicize",
					"when": "editorLangId == choicescript"
				},
				{
					"command": "choicescript.bold",
					"when": "editorLangId == choicescript"
				}
			]
		},
		"keybindings": [
			{
				"command": "choicescript.italicize",
				"key": "ctrl+i",
				"mac": "cmd+i",
				"when": "editorTextFocus && editorLangId == choicescript"
			},
			{
				"command": "choicescript.italicize",
				"key": "ctrl+shift+i",
				"mac": "cmd+shift+i",
				"when": "editorTextFocus && editorLangId == choicescript"
			},
			{
				"command": "choicescript.bold",
				"key": "ctrl+shift+b",
				"mac": "cmd+shift+b",
				"when": "editorTextFocus && editorLangId == choicescript"
			}
		],
		"grammars": [
			{
				"language": "choicescript",
				"scopeName": "source.cs",
				"path": "./syntaxes/cs.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "choicescript",
				"path": "./snippets.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"choicescriptVsCode.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"test": "nyc mocha -r ts-node/register \"test/server/src/*.test.ts\"",
		"report-coverage": "nyc report --reporter=text-lcov > coverage.lcov",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@fluffy-spoon/substitute": "^1.145.0",
		"@types/chai": "^4.2.12",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.6.0",
		"@types/urijs": "^1.19.10",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.9.1",
		"chai": "^4.2.0",
		"eslint": "^7.7.0",
		"merge-options": "^2.0.0",
		"mocha": "^8.1.1",
		"nyc": "^15.1.0",
		"rimraf": "^3.0.2",
		"ts-loader": "^8.0.2",
		"ts-node": "^8.10.2",
		"typescript": "^4.0.2",
		"vscode-languageserver": "^6.1.1",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {}
}
